<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:padding="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_p_id1"
        android:textSize="20sp"
        android:text="PersonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/ed_p_id1"
        android:hint="@string/id"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tv_p_id1"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

        <TextView
        android:id="@+id/tv_p_pw1"
        android:text="PersonPW"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_p_id1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/ed_p_pw1"
            android:hint="PW"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/ed_p_id1"
            android:layout_toRightOf="@+id/tv_p_id1"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <Button
            android:text="LOGIN"
            android:layout_below="@id/ed_p_pw1"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="20dp"
            />


</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>